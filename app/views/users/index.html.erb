<div class="container">
  <h2>Search User</h2>

  <%= form_tag root_path, method: :get do %>
    <%= text_field_tag :search, params[:search], class: "input-search", placeholder: "Search by name" %>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>No</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "user", collection: @users  %>
    </tbody>
  </table>

  <p><%= page_entries_info @users %></p>
  <%= paginate @users, theme: "twitter-bootstrap-3" %>
</div>
